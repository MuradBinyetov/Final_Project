
@{
    ViewData["Title"] = "GetCategories";
}


    <div style="background-color: #eee;">
        <div class="container">
            <div class="row">
                <div class="col-12 return-home"><a href="@Url.Action("Index","Home")">Baş Səhifə</a></div>
            </div>
        </div>
    </div>
    <section class="border pb-5" style="background-color: #eee;">
        <div class="container-fluid menu-h1" style="background-color: #fff;">
            <div class="row">

                <div>
                    @foreach (var item1 in ViewBag.Category)
                    {
                        <h1 class="pb-1 pt-4">@item1</h1>
                    }

                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="submenus">
                        <a href="@Url.Action("Filter","Product",new { id=item.Id})" title="@item.Name">
                            <img class="col-10" src="~/images/@item.Image" alt="@item.Name">
                            <span>@item.Name</span>
                        </a>
                    </div>
                }

            </div>
        </div>
    </section>

